@model List<digioz.Portal.Domain.DomainModel.Menu>


@if (Model != null)
{
    foreach (var item in Model)
    {
        if (!string.IsNullOrEmpty(item.Controller))
        {
            <li @if (@HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString() == @item.Controller 
                && @HttpContext.Current.Request.RequestContext.RouteData.Values["action"].ToString() == @item.Action)
                { <text>class="active"</text> }>
                @Html.ActionLink(@item.Name, @item.Action, @item.Controller, new { area = "" }, null)
            </li>
        }
        else
        {
            <li><a href="@item.URL" target="@item.Target">@item.Name</a></li>
        }
    }
}
else
{
    <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
}
