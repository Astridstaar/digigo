@model IEnumerable<digioz.Portal.Web.Models.ViewModels.VideosViewModel>
@{
    ViewBag.Title = "Videos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Videos</h2>

<p>&nbsp;</p>

<table style="width:95%;">
<tr>
@{
    int i = 0;

    foreach (var item in Model)
    {
        <td>
            <div style="text-align:center;padding-bottom:20px;">
                <a href="/Videos/List/@item.ID">
                    <img class="img-thumbnail" alt="240x120" style="width: 240px; height: 120px;" src="~/Content/Videos/Thumb/@item.Thumbnail" border="0" />
                    <br />
                    @item.Description
                </a>
            </div>
        </td>
        
        i++;
        
        if (i == 2)
        {
            @:</tr><tr>
            i = 0;
        }

    }
}
</tr>

</table>

<p>&nbsp;</p>




